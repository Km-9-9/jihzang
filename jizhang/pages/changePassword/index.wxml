<view class="change-password-page">
  <van-cell-group>
    <van-field
      label="修改密码"
      value="{{ paw }}"
      placeholder="请输入密码"
      border="{{ false }}"
      title-width="130rpx"
      bind:change="onChangePaw"
      size="large"
    />
    <van-field
      label="确认密码"
      value="{{ confirmPaw }}"
      placeholder="请再次输入密码"
      border="{{ false }}"
      title-width="130rpx"
      bind:change="onChangeConfirmPaw"
      size="large"
    />
  </van-cell-group>
  <view class="btn">
        <view class="sub" bindtap="editUserInfo">确认并保存</view>
    </view>
</view>