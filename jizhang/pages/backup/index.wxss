.container {
  padding: 20rpx;
  min-height: 100vh;
  box-sizing: border-box;
}


.section {
  margin-bottom: 40rpx;
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.title {
  font-size: 34rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
}

.date-pickers {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.date-item {
  padding: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
}

.action-btn {
  margin-top: 20rpx;
}

/* 按钮基础样式 */
.custom-btn {
  width: 80%;
  margin: 40rpx auto 0;
  border-radius: 50rpx;
  font-size: 32rpx;
  line-height: 2.8;
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}

.backup-btn {
  background: #8CB4D9;
  color: #333;

}

.restore-btn {
  background: #FFB6C1;
  color: #333;
}

/* 按钮交互状态 */
.custom-btn::after {
  border: none !important; /* 去除微信默认边框 */
}

.backup-btn:active {
  background: #FFF5E6;
  transform: scale(0.98);
}

.restore-btn:active {
  background: #FFF5E6;
  transform: scale(0.98);
}
/* 调整滑轮滚动选择的字体大小 */
.van-datetime-picker__column .van-picker-column__item {
  font-size: rpx; /* 你可以根据需要调整这个值 */
}