page {
  height: 100%;
  background-color: #fff;
}
.my {
  position: relative;
}
.my .user_info {
  background-color: var(--jizhangColor);
  height: 320rpx;
  padding: 0 40rpx;
}
.my .user_info .user_img {
  height: 200rpx;
  width: 670rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.my .user_info .user_img image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.my .user_info .user_text {
  margin-top: 20rpx;
  width: 670rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.my .user_info .user_text .user_name {
  font-size: 40rpx;
}
.my .feature_list {
  width: 700rpx;
  margin-top: 20rpx;
  margin-left: 25rpx;
  box-shadow: 0px 0px 10px rgba(220, 220, 220, 0.5);
  padding: 32rpx;
}
.my .feature_list .feature_item {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #F5F5F5;
  display: flex;
  justify-content: space-between;
}
.my .feature_list .feature_item .left {
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
}
.my .feature_list .feature_item .left .icon {
  font-size: 40rpx;
}
.my .feature_list .feature_item .left .feature_title {
  margin-left: 15rpx;
}
